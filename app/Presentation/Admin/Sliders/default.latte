{block content}
<div class="container">
<h1 class="my-3" n:block="title">Sliders</h1>
<a n:href="create" class="btn btn-danger">+ New Slider</a>
<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {foreach $sliders as $slider}
            <tr>
                <td>{$slider->id}</td>
                <td>{$slider->title}</td>
                <td>{$slider->description|truncate:50}</td>
                <td>
                    <img src="{$basePath}/uploads/slider/{$slider->image}" width="120">
                </td>
                <td>
                    <a n:href="edit, id => $slider->id">âœï¸</a> | <a n:href="delete, id => $slider->id">ğŸ—‘ï¸</a>
                </td>
            </tr>
        {/foreach}
    </tbody>
</table>
</div>
{/block}
